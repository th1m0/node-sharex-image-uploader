{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": false,
		"strict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"typeRoots": ["./node_modules/@types"],
		"moduleResolution": "node",
        "esModuleInterop": true
	},
	"exclude": ["./dist/*", "./node_modules/*"],
	"include": ["./src/**/*.ts", "node.ts"]
}